{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "build/",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
