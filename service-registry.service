[Unit]
Description=Service Registry
StartLimitBurst=10
After=mysql.service
After=docker.service
Requires=docker.service

[Service]
TasksMax=infinity
RestartSec=30
Restart=always
Environment="NODE_ENV=production"
Type=simple
ExecStart=/usr/bin/docker run --network="host" --volume=/var/lib/danielhammerl/service-dbs:/var/lib/danielhammerl/service-dbs --env-file /var/lib/danielhammerl/service-env/service-registry.env -i dhammerl-service-registry:latest

[Install]
WantedBy=multi-user.target
